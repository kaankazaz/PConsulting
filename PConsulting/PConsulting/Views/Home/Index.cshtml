@model PConsulting.ViewModels.HomePageVM

@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://assets.kpmg/content/dam/kpmg/uk/images/2019/05/changing-futures/cf3-landing-kayakers-1500x1000.jpg/jcr:content/renditions/cq5dam.web.1400.350.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Change takes unexpected turns</h5>
                <p>Together we are making the connections that matter to find new paths to growth through disruption.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://assets.kpmg/content/dam/kpmg/uk/images/2019/09/me2030-over-arching-animations-1500.1000.jpg/jcr:content/renditions/cq5dam.web.1400.350.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Mobility 2030: Future of Mobility</h5>
                <p>Future mobility will be transformed by technological innovation.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="https://assets.kpmg/content/dam/kpmg/uk/images/2019/08/reimagine-public-policy-woman-in-orange-jumper.jpg/jcr:content/renditions/cq5dam.web.1400.350.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Reimagine public policy</h5>
                <p>Disruptive thinking to achieve public policy goals.</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />

    <div class="row">
        <div class="col">
            <h5>Latest Articles</h5>
            @if (Model.LatestArticles.Count() > 0)
            {
                <ul class="list-group">
                    @for (var i = 0; i < Model.LatestArticles.Count(); i++)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="/Home/Read/@Model.LatestArticles[i].Id" class="text-primary">@Model.LatestArticles[i].ArticleTitle</a>
                            <span class="badge badge-danger badge-pill">@Model.LatestArticles[i].LikeCount</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No articles found</p>
            }
        </div>
        <div class="col">
            <h5>Most Liked Articles</h5>
            @if (Model.MostLikedArticles.Count() > 0)
            {
                <ul class="list-group">
                    @for (var i = 0; i < Model.MostLikedArticles.Count(); i++)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a href="/Home/Read/@Model.MostLikedArticles[i].Id" class="text-primary">@Model.MostLikedArticles[i].ArticleTitle</a>
                            <span class="badge badge-danger badge-pill">@Model.MostLikedArticles[i].LikeCount</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No articles found</p>
            }
        </div>
    </div>
