@model PConsulting.Data.Article

<div class="modal-header">
    <h4 class="modal-title" id="MyModalTitle">Remove Article</h4>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>

</div>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "DeleteRecord" }))
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="form-horizontal">
            @Html.HiddenFor(m => m.Id)
            <p class="lead"><small>Do you like to remove the following article?</small></p>

            <b>@Html.LabelFor(m => m.ArticleTitle, htmlAttributes: new { @class = "control-label col-sm-4" })</b>
            <div class="col-sm-9">
                <p class="form-control-static">@Html.DisplayFor(m => m.ArticleTitle, new { htmlAttributes = new { @class = "form-control-static" } })</p>
            </div>

            <br />

        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <input type="submit" class="btn btn-danger" value="Remove" id="btnSubmit" />
    </div>
}

<script>
    $(document).ready(function () {
        $.validator.unobtrusive.parse('#DeleteRecord');
        $("#btnSubmit").click(function () {
            if (!$("#DeleteRecord").valid()) {
                return false;
            }
        });

    });
</script>